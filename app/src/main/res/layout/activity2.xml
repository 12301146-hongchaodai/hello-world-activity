<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brianb.helloworldapplication.Activity2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#cc0"
        android:paddingRight="@dimen/linear_layout_margin">
        <TextView
            android:text="@string/title_activity_activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true" />
        <EditText
            android:layout_width="150sp"
            android:layout_height="fill_parent"
            android:id="@+id/editText"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:background="@color/accent_material_dark"
            android:layout_margin="@dimen/activity_horizontal_margin" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button2"
            android:layout_toEndOf="@id/editText"
            android:layout_alignTop="@+id/editText" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_toEndOf="@+id/editText" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/editText" />
    </RelativeLayout>
    <EditText
        android:layout_width="100sp"
        android:layout_height="fill_parent"
        android:id="@+id/editText3"

        android:layout_alignParentStart="true"
        android:background="#A00"
        android:layout_marginRight="@dimen/linear_layout_margin"
        android:layout_marginLeft="@dimen/linear_layout_margin"  />
    <EditText
        android:layout_width="180sp"
        android:layout_height="fill_parent"
        android:id="@+id/editText2"

        android:layout_alignParentStart="true"
        android:background="@color/material_blue_grey_800"
        android:layout_marginRight="@dimen/linear_layout_margin" />
</LinearLayout>

